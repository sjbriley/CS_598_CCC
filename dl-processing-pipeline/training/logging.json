{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "standard": {
        "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
      }
    },
    "handlers": {
      "file": {
        "level": "DEBUG",
        "class": "logging.FileHandler",
        "filename": "/workspace/logs/log.txt",
        "formatter": "standard",
        "encoding": "utf8"
      },
      "console": {
        "level": "INFO",
        "class": "logging.StreamHandler",
        "formatter": "standard"
      }
    },
    "loggers": {
      "": {
        "handlers": ["file", "console"],
        "level": "DEBUG",
        "propagate": true
      }
    }
}